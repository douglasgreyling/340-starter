<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form id="updateForm" action="/inv/update" method="post">
  <fieldset>
    <legend>Edit Vehicle Information</legend>

    <!-- Hidden field for inventory ID -->
    <input type="hidden" name="inv_id" value="<%= locals.inv_id || '' %>">

    <div class="form-row">
      <label for="classification_id">Classification:</label>
      <%- classificationSelect %>
    </div>

    <div class="form-row">
      <label for="inv_make">Make:</label>
      <input
        type="text"
        id="inv_make"
        name="inv_make"
        required
        minlength="3"
        value="<%= locals.inv_make || '' %>"
      >
      <span id="makeError" class="error-message"></span>
    </div>

    <div class="form-row">
      <label for="inv_model">Model:</label>
      <input
        type="text"
        id="inv_model"
        name="inv_model"
        required
        minlength="3"
        value="<%= locals.inv_model || '' %>"
      >
      <span id="modelError" class="error-message"></span>
    </div>

    <div class="form-row">
      <label for="inv_year">Year:</label>
      <input
        type="text"
        id="inv_year"
        name="inv_year"
        required
        pattern="^\d{4}$"
        maxlength="4"
        title="Please enter a 4-digit year"
        value="<%= locals.inv_year || '' %>"
      >
      <span id="yearError" class="error-message"></span>
    </div>

    <div class="form-row">
      <label for="inv_description">Description:</label>
      <textarea
        id="inv_description"
        name="inv_description"
        required
        minlength="10"
        rows="4"
      ><%= locals.inv_description || '' %></textarea>
      <span id="descriptionError" class="error-message"></span>
    </div>

    <div class="form-row">
      <label for="inv_image">Image Path:</label>
      <input
        type="text"
        id="inv_image"
        name="inv_image"
        required
        placeholder="/images/vehicles/no-image.png"
        value="<%= locals.inv_image || '/images/vehicles/no-image.png' %>"
      >
      <span id="imageError" class="error-message"></span>
    </div>

    <div class="form-row">
      <label for="inv_thumbnail">Thumbnail Path:</label>
      <input
        type="text"
        id="inv_thumbnail"
        name="inv_thumbnail"
        required
        placeholder="/images/vehicles/no-image-tn.png"
        value="<%= locals.inv_thumbnail || '/images/vehicles/no-image-tn.png' %>"
      >
      <span id="thumbnailError" class="error-message"></span>
    </div>

    <div class="form-row">
      <label for="inv_price">Price:</label>
      <input
        type="number"
        id="inv_price"
        name="inv_price"
        required
        min="0"
        step="0.01"
        value="<%= locals.inv_price || '' %>"
      >
      <span id="priceError" class="error-message"></span>
    </div>

    <div class="form-row">
      <label for="inv_miles">Miles:</label>
      <input
        type="number"
        id="inv_miles"
        name="inv_miles"
        required
        min="0"
        value="<%= locals.inv_miles || '' %>"
      >
      <span id="milesError" class="error-message"></span>
    </div>

    <div class="form-row">
      <label for="inv_color">Color:</label>
      <input
        type="text"
        id="inv_color"
        name="inv_color"
        required
        minlength="2"
        value="<%= locals.inv_color || '' %>"
      >
      <span id="colorError" class="error-message"></span>
    </div>

    <input type="submit" value="Update Vehicle" id="submitBtn" disabled>
  </fieldset>
</form>

<script src="/js/inv-update.js"></script>
