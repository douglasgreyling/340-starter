<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<div class="saved-comparison-header">
  <div class="comparison-info">
    <h2><%= comparison.comparison_name %></h2>
    <% if (comparison.comparison_description) { %>
      <p class="description"><%= comparison.comparison_description %></p>
    <% } %>

    <div class="comparison-meta">
      <span class="meta-item">
        <strong>Created:</strong>
        <%= new Date(comparison.created_date).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
          hour: '2-digit',
          minute: '2-digit'
        }) %>
      </span>

      <% if (comparison.updated_date && comparison.updated_date !== comparison.created_date) { %>
        <span class="meta-item">
          <strong>Updated:</strong>
          <%= new Date(comparison.updated_date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
          }) %>
        </span>
      <% } %>
    </div>
  </div>

  <div class="header-actions">
    <% if (accountData && accountData.account_id == comparison.account_id) { %>
      <a href="/compare/edit/<%= comparison.comparison_id %>" class="btn btn-secondary">
        <span class="icon">‚úèÔ∏è</span> Edit
      </a>
      <form method="POST" action="/compare/delete/<%= comparison.comparison_id %>"
            onsubmit="return confirm('Are you sure you want to delete this comparison? This action cannot be undone.')"
            style="display: inline;">
        <button type="submit" class="btn btn-danger">
          <span class="icon">üóëÔ∏è</span> Delete
        </button>
      </form>
    <% } %>

    <button onclick="window.print()" class="btn btn-outline">
      <span class="icon">üñ®Ô∏è</span> Print
    </button>

    <button onclick="shareComparison()" class="btn btn-outline">
      <span class="icon">üì§</span> Share
    </button>
  </div>
</div>

<% 
  const vehicleArray = [];
  if (vehicles) {
    if (vehicles.vehicle1) vehicleArray.push(vehicles.vehicle1);
    if (vehicles.vehicle2) vehicleArray.push(vehicles.vehicle2);
    if (vehicles.vehicle3) vehicleArray.push(vehicles.vehicle3);
  }
%>

<% if (vehicleArray && vehicleArray.length > 0) { %>
  <div class="vehicle-images">
    <% vehicleArray.forEach(function(vehicle) { %>
      <div class="vehicle-image-container">
        <% if (vehicle.inv_image) { %>
          <img src="<%= vehicle.inv_image %>"
               alt="<%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %>"
               onerror="this.src='/images/vehicles/no-image.png'">
        <% } else { %>
          <img src="/images/vehicles/no-image.png" alt="No image available">
        <% } %>

        <div class="vehicle-title">
          <h3><%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %></h3>
        </div>
      </div>
    <% }); %>
  </div>

  <div class="comparison-table-container">
    <table class="comparison-table">
      <thead>
        <tr>
          <th class="feature-column">Feature</th>
          <% vehicleArray.forEach(function(vehicle) { %>
            <th class="vehicle-column">
              <%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %>
            </th>
          <% }); %>
        </tr>
      </thead>
      <tbody>
        <tr class="price-row highlight-best-value" data-compare="price">
          <td class="feature-label"><strong>Price</strong></td>
          <% vehicleArray.forEach(function(vehicle) { %>
            <td class="price-cell" data-value="<%= vehicle.inv_price %>">
              $<%= vehicle.inv_price.toLocaleString() %>
            </td>
          <% }); %>
        </tr>

        <tr data-compare="mileage">
          <td class="feature-label"><strong>Mileage</strong></td>
          <% vehicleArray.forEach(function(vehicle) { %>
            <td data-value="<%= vehicle.inv_miles %>">
              <%= vehicle.inv_miles.toLocaleString() %> miles
            </td>
          <% }); %>
        </tr>

        <tr>
          <td class="feature-label"><strong>Color</strong></td>
          <% vehicleArray.forEach(function(vehicle) { %>
            <td><%= vehicle.inv_color %></td>
          <% }); %>
        </tr>

        <tr>
          <td class="feature-label"><strong>Classification</strong></td>
          <% vehicleArray.forEach(function(vehicle) { %>
            <td><%= vehicle.classification_name %></td>
          <% }); %>
        </tr>

        <tr>
          <td class="feature-label"><strong>Description</strong></td>
          <% vehicleArray.forEach(function(vehicle) { %>
            <td class="description-cell">
              <div class="description-content">
                <%= vehicle.inv_description %>
              </div>
            </td>
          <% }); %>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="vehicle-actions">
    <% vehicleArray.forEach(function(vehicle) { %>
      <a href="/inv/detail/<%= vehicle.inv_id %>" class="btn btn-primary">
        View <%= vehicle.inv_make %> <%= vehicle.inv_model %> Details
      </a>
    <% }); %>
  </div>

<% } else { %>
  <div class="no-vehicles">
    <h3>No vehicles found for this comparison</h3>
    <p>The vehicles in this comparison may have been removed from inventory.</p>
    <a href="/compare/select" class="btn btn-primary">Create New Comparison</a>
  </div>
<% } %>

<div id="shareModal" class="modal">
  <div class="modal-content">
    <span class="close" onclick="closeShareModal()">&times;</span>
    <h3>Share This Comparison</h3>
    <p>Copy the link below to share this comparison:</p>
    <div class="share-link-container">
      <input type="text" id="shareLink" readonly class="share-link-input">
      <button onclick="copyShareLink()" class="btn btn-primary">Copy Link</button>
    </div>
    <p class="share-note">Anyone with this link can view this comparison.</p>
  </div>
</div>

<script>
function shareComparison() {
  const shareLink = window.location.href;
  document.getElementById('shareLink').value = shareLink;
  document.getElementById('shareModal').style.display = 'block';
}

function closeShareModal() {
  document.getElementById('shareModal').style.display = 'none';
}

function copyShareLink() {
  const shareInput = document.getElementById('shareLink');
  shareInput.select();
  shareInput.setSelectionRange(0, 99999);

  try {
    document.execCommand('copy');
    alert('Link copied to clipboard!');
  } catch (err) {
    console.error('Failed to copy link: ', err);
    alert('Failed to copy link. Please copy manually.');
  }
}

window.onclick = function(event) {
  const modal = document.getElementById('shareModal');
  if (event.target === modal) {
    closeShareModal();
  }
}

document.addEventListener('DOMContentLoaded', function() {
  highlightBestValues();
});

function highlightBestValues() {
  const priceRow = document.querySelector('[data-compare="price"]');
  if (priceRow) {
    const priceCells = priceRow.querySelectorAll('[data-value]');
    let bestPrice = Infinity;
    let bestPriceCell = null;

    priceCells.forEach(cell => {
      const value = parseFloat(cell.getAttribute('data-value'));
      if (value < bestPrice) {
        bestPrice = value;
        bestPriceCell = cell;
      }
    });

    if (bestPriceCell) {
      bestPriceCell.classList.add('best-value');
    }
  }

  const mileageRow = document.querySelector('[data-compare="mileage"]');
  if (mileageRow) {
    const mileageCells = mileageRow.querySelectorAll('[data-value]');
    let bestMileage = Infinity;
    let bestMileageCell = null;

    mileageCells.forEach(cell => {
      const value = parseFloat(cell.getAttribute('data-value'));
      if (value < bestMileage) {
        bestMileage = value;
        bestMileageCell = cell;
      }
    });

    if (bestMileageCell) {
      bestMileageCell.classList.add('best-value');
    }
  }
}
</script>

