<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<!-- Account Update Form -->
<h2>Account Update</h2>
<p>Update your account information below. All fields are required.</p>

<form action="/account/update" method="post" id="updateForm">
  <fieldset>
    <legend>Update Account Information</legend>
    
    <input type="hidden" name="account_id" value="<%= locals.account_id || '' %>">
    
    <div class="form-row">
      <label for="account_firstname">First Name:</label>
      <input 
        type="text" 
        id="account_firstname" 
        name="account_firstname" 
        value="<%= locals.account_firstname || '' %>" 
        required 
        minlength="2"
        title="Please enter your first name (minimum 2 characters)"
      >
    </div>
    
    <div class="form-row">
      <label for="account_lastname">Last Name:</label>
      <input 
        type="text" 
        id="account_lastname" 
        name="account_lastname" 
        value="<%= locals.account_lastname || '' %>" 
        required 
        minlength="2"
        title="Please enter your last name (minimum 2 characters)"
      >
    </div>
    
    <div class="form-row">
      <label for="account_email">Email Address:</label>
      <input 
        type="email" 
        id="account_email"
        name="account_email" 
        value="<%= locals.account_email || '' %>" 
        required 
        placeholder="Enter a valid email address"
        title="Please enter a valid email address"
      >
    </div>

    <input type="submit" value="Update Account" id="updateButton" name="updateButton">
  </fieldset>
</form>

<!-- Change Password Form -->
<h2>Change Password</h2>
<p><strong>Note:</strong> Entering a new password will replace your current password. Please ensure you remember your new password.</p>

<form action="/account/update-password" method="post" id="passwordForm">
  <fieldset>
    <legend>Change Password</legend>
    
    <input type="hidden" name="account_id" value="<%= locals.account_id || '' %>">
    
    <div class="form-row">
      <label for="account_password">New Password:</label>
      <input 
        type="password" 
        id="account_password" 
        name="account_password" 
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" 
        required 
        minlength="12"
        title="Password must be at least 12 characters and contain at least 1 uppercase letter, 1 lowercase letter, 1 number, and 1 special character"
      >
      <small class="password-requirements">
        <strong>Password Requirements:</strong><br>
        • At least 12 characters<br>
        • At least 1 uppercase letter (A-Z)<br>
        • At least 1 lowercase letter (a-z)<br>
        • At least 1 number (0-9)<br>
        • At least 1 special character (!@#$%^&*)<br>
        • No spaces allowed
      </small>
    </div>

    <input type="submit" value="Change Password" id="passwordButton" name="passwordButton">
  </fieldset>
</form>